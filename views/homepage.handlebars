<main class=" text-center ">
  <h1 class="mb-4 text-black"> Posts</h1>
  <div class="mx-auto"> <!-- Add mx-auto class here -->
    {{#each posts}}
      <div class="row-md-5 shadow-lg">
        <div class="card mb-5 justify-content-center ">
          <div class="card-header bg-warning">
            <h2 class="mt-1 card-title">
              <a href="/post/{{id}}" class="text-dark">{{title}}</a>
            </h2>
          </div>
          <div class="card-body text-dark">
            <p>Created by: {{user.username}}</p>
            <p> Date: {{created_at}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</main>
